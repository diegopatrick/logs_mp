{
	"info": {
		"_postman_id": "random-uuid",
		"name": "API Logs & Auditoria",
		"description": "Coleção para testar a API de Logs & Auditoria com MongoDB e Redis",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Listar Logs",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:8080/api/v1/logs?page=1&per_page=10",
					"protocol": "http",
					"host": ["localhost"],
					"port": "8080",
					"path": ["api", "v1", "logs"],
					"query": [
						{
							"key": "page",
							"value": "1"
						},
						{
							"key": "per_page",
							"value": "10"
						}
					]
				},
				"description": "Lista os logs com paginação"
			}
		},
		{
			"name": "Criar Log",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"type\": \"info\",\n    \"message\": \"Teste de log\",\n    \"context\": {\n        \"user_id\": 1,\n        \"action\": \"test\"\n    },\n    \"timestamp\": \"2024-03-20T10:00:00Z\"\n}"
				},
				"url": {
					"raw": "http://localhost:8080/api/v1/logs",
					"protocol": "http",
					"host": ["localhost"],
					"port": "8080",
					"path": ["api", "v1", "logs"]
				},
				"description": "Cria um novo registro de log"
			}
		},
		{
			"name": "Exportar Logs",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:8080/api/v1/logs/export",
					"protocol": "http",
					"host": ["localhost"],
					"port": "8080",
					"path": ["api", "v1", "logs", "export"]
				},
				"description": "Exporta todos os logs em formato JSON"
			}
		},
		{
			"name": "Verificar Integridade",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:8080/api/v1/logs/{id}/verify",
					"protocol": "http",
					"host": ["localhost"],
					"port": "8080",
					"path": ["api", "v1", "logs", "{id}", "verify"],
					"variable": [
						{
							"key": "id",
							"value": "seu-id-aqui",
							"description": "ID do log para verificar"
						}
					]
				},
				"description": "Verifica a integridade de um log específico"
			}
		}
	]
} 